{
  "compilerOptions": {
    "target": "ES2020", // Define o alvo da compilação
    "module": "commonjs", // Usa o sistema de módulos do Node.js
    "outDir": "./dist", // Pasta de saída dos arquivos compilados
    "rootDir": "./src", // Diretório raiz dos arquivos TypeScript
    "strict": true, // Ativa verificações estritas de tipo
    "esModuleInterop": true, // Habilita a interoperabilidade entre CommonJS e ES Modules
    "skipLibCheck": true, // Ignora a verificação de tipos em declarações de terceiros
    "forceConsistentCasingInFileNames": true // Enforce consistent casing in file names.
  },
  "include": [
    "src"
  ], // Inclui a pasta src no projeto
  "exclude": [
    "node_modules"
  ] // Exclui a pasta node_modules
}